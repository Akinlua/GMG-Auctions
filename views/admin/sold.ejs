<!-- partial -->
<div class="main-panel">
    <div class="content-wrapper">


      <div class="row">
        <div class="col-md-12">
            <% if (search) { %>
                <h4>Search result for '<%= search %>'</h4>                    
            <% } %>
          <h6 style="color: green;"><%= message %></h6>
          <div class="card p-3">
            <div class="table-responsive pt-3">
              <table class="table table-striped project-orders-table">
                <h5 style="margin: 10px 30px 30px 10px;">All Sold Items</h5>
                <hr>
                <% if (AllItems.length > 0) { %>
                <thead>
                  <tr>
                    <th class="ml-5">Owner</th>
                    <th>Item name</th>
                    <th>Initial Cost</th>
                    <th>Bid Price</th>
                    <th>Status	</th>
                    <th>Paid</th>
                    <th>Auction Date</th>
                    <th>Actions</th>
                  </tr>
                </thead>

                <tbody>
                    <% AllItems.forEach(item => { %>
                        <tr>
                            <td>#<%= item.owner %></td>
                            <td><%= item.name %> </td>
                            <td>£<%= item.cost %></td>
                            <% if (item.Bid_price) { %>
                                <td>£<%= item.Bid_price %></td>
                            <% }else { %>
                                <td>Nil</td>
                            <% } %>
                            <td><%= item.status %></td>
                            <td><%= item.paid %></td>
                            <% if (item.auctionDate) { %>
                                <td><%= item.auctionDate %></td>
                            <% } else { %>
                                <td>
                                    <a href="/admin/item/<%= item._id %>#setDate" type="button" class="btn btn-success btn-sm btn-icon-text mr-3">
                                      Set date
                                      <i class="typcn typcn-edit btn-icon-append"></i>                          
                                  </a>
                                </td>
                            <% } %>
                            <td>
                            <div class="d-flex align-items-center">
                                  <a href="/admin/item/<%= item._id %>" type="button" class="btn btn-success btn-sm btn-icon-text mr-3">
                                  View
                                  <i class="typcn typcn-edit btn-icon-append"></i>                          
                                  </a>
                                <form action="/admin/unsold-item/<%= item._id %>" method="post">
                                  <button type="submit" class="btn btn-danger btn-sm btn-icon-text">
                                    UNDO
                                    <i class="typcn typcn-delete-outline btn-icon-append"></i>                          
                                    </button>
                                </form>   
                            </div>
                            </td>
                        </tr>
                    <% }) %>

                </tbody>

                
                <% } else { %>
                    <h4 style="margin: 10px 30px 30px 10px;" >No Item Found</h4>
                <% } %>

              </table>
            </div>
          </div>
        </div>
      </div>

    </div>
    <!-- content-wrapper ends -->
    <!-- partial:partials/_footer.html -->
    <footer class="footer">
        <div class="card">
            <div class="card-body">
                <div class="d-sm-flex justify-content-center justify-content-sm-between">
                    <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright © 2023.  All rights reserved.</span>
                </div>
            </div>    
        </div>        
    </footer>
    <!-- partial -->
  </div>
  <!-- main-panel ends -->