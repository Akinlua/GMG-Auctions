<!-- partial -->
<div class="main-panel">
    <div class="content-wrapper">


        <div class="row">
            <div class="col-md-12">
            <h4>List of all Registered Users</h4>
    
            <p style="color: green;"><%= message %></p>
              <div class="card">
    
                <div class="table-responsive pt-3">
                  <table class="table table-striped project-orders-table">
                    <% if (users.length > 0) { %>
                     
                    <thead>
                      <tr>
                        <th class="ml-5">UserID</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Blocked</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% users.forEach(user => { %>
                       
                        <tr>
                          <td>#<%= user.id %></td>
                          <td><%= user.username %></td>
                          <td><%= user.email %> </td>
                          <td><%= user.blocked %></td>
                          <td>
                            <a href="/admin/user-detail/<%= user._id %>" type="button" class="btn btn-success btn-sm btn-icon-text mr-3">
                              View
                              <i class="typcn typcn-edit btn-icon-append"></i>                          
                              </a>
                          </td>
                          <td>
                            <% if (user.blocked == false) { %>
                              <form action="/admin/block-user/<%= user._id %>?_method=PATCH" method="post">
                                <button type="submit" class="btn btn-danger btn-sm btn-icon-text mr-3">
                                  Block
                                  <i class="typcn typcn-delete-outline btn-icon-append"></i>                          
                                </button>
                              </form>  
                            <% } else {%>
                              <form action="/admin/unblock-user/<%= user._id %>?_method=PATCH" method="post">
                                <button type="submit" class="btn btn-danger btn-sm btn-icon-text mr-3">
                                  UnBlock
                                  <i class="typcn typcn-delete-outline btn-icon-append"></i>                          
                                </button>
                              </form>  
                            <% } %>
                             
                          </td>
                        </tr>
    
                      <% }) %>
                      
                    </tbody>
    
                    <% } else { %>
                      <p>There are no registered users</p>
                    <% } %>
                  </table>
                </div>
              </div>
            </div>
          </div>

    </div>
    <!-- content-wrapper ends -->
    <!-- partial:partials/_footer.html -->
    <footer class="footer">
        <div class="card">
            <div class="card-body">
                <div class="d-sm-flex justify-content-center justify-content-sm-between">
                    <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright Â© 2023.  All rights reserved.</span>
                </div>
            </div>    
        </div>        
    </footer>
    <!-- partial -->
  </div>
  <!-- main-panel ends -->